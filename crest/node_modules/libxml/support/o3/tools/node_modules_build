#!/bin/bash
cd `dirname $0`
cd ..
if [[ `uname` == 'Darwin' ]]; then
	echo "OSX build"
	export CFLAGS='-no_compact_linkedit -isysroot /Developer/SDKs/MacOSX10.5.sdk -mmacosx-version-min=10.5' 
	export CXXFLAGS="$CFLAGS"
	export LDFLAGS="$CFLAGS"
	export LINKFLAGS="$CFLAGS"
fi
rm -rf build/ || true
node tools/gluegen.js
node-waf -vv configure
node-waf -vv 
